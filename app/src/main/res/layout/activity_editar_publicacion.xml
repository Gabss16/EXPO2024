<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editar_publicacion">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="415dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-4dp">

        <ScrollView
            android:layout_width="414dp"
            android:layout_height="730dp"
            tools:layout_editor_absoluteX="-1dp"
            tools:layout_editor_absoluteY="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spnDepartamentosEditar"
                    android:layout_width="331dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="204dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.53"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/txtTituloJobEditar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_trabajos"
                    android:ems="10"
                    android:hint="Título"
                    android:inputType="text"
                    android:paddingLeft="35dp"
                    android:textColor="#97000000"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.046" />

                <EditText
                    android:id="@+id/txtUbicacionJobEditar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_trabajos"
                    android:ems="10"
                    android:hint="Ubicación"
                    android:inputType="text"
                    android:paddingLeft="35dp"
                    android:textColor="#97000000"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.34" />

                <EditText
                    android:id="@+id/txtDescripcionJobEditar"
                    android:layout_width="325dp"
                    android:layout_height="66dp"
                    android:background="@drawable/edittext_trabajos"
                    android:ems="10"
                    android:hint="Descripción"
                    android:inputType="text"
                    android:paddingLeft="35dp"
                    android:textColor="#97000000"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.139" />

                <EditText
                    android:id="@+id/txtExperienciaJobEditar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_trabajos"
                    android:ems="10"
                    android:hint="Experiencia Requerida"
                    android:inputType="text"
                    android:paddingLeft="35dp"
                    android:textColor="#97000000"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.44" />

                <Button
                    android:id="@+id/BtnIngresoEditado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="890dp"
                    android:background="@drawable/boton_publicar_trabajo"
                    android:foreground="@drawable/boton_publicar_trabajo"
                    android:text="Button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/txtHabilidadesJobEditar"
                    android:layout_width="325dp"
                    android:layout_height="66dp"
                    android:background="@drawable/edittext_trabajos"
                    android:ems="10"
                    android:hint="Habilidades Y Competencias"
                    android:inputType="text"
                    android:paddingLeft="35dp"
                    android:textColor="#97000000"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.57" />

                <EditText
                    android:id="@+id/txtBeneficiosJobEditar"
                    android:layout_width="325dp"
                    android:layout_height="66dp"
                    android:background="@drawable/edittext_trabajos"
                    android:ems="10"
                    android:hint="Beneficios"
                    android:inputType="text"
                    android:paddingLeft="35dp"
                    android:textColor="#97000000"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.72" />

                <EditText
                    android:id="@+id/txtSalarioJobEditar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_trabajos"
                    android:ems="10"
                    android:hint="Salario"
                    android:inputType="number"
                    android:paddingLeft="35dp"
                    android:textColor="#97000000"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.84" />

                <Spinner
                    android:id="@+id/spnTiposTrabajoEditar"
                    android:layout_width="239dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="119dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtSalarioJobEditar" />

                <ImageButton
                    android:id="@+id/btnSalir6"
                    android:layout_width="35dp"
                    android:layout_height="34dp"
                    android:background="@drawable/baseline_arrow_back_ios_black_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.039"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.017" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>