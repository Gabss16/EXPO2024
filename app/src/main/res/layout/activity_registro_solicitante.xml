            <EditText
                android:id="@+id/txtContrasenaSolicitante"
                android:layout_width="298dp"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/txt_registro"
                android:ems="10"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.508"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtCorreoSolicitante" />

            <EditText
                android:id="@+id/txtHabilidadesLaborales"
                android:layout_width="290dp"
                android:layout_height="78dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="28dp"
                android:background="@drawable/txt_registro"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Realiza una breve descripción de tus habilidades laborales."
                android:inputType="textMultiLine"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spGeneroSolicitante" />

            <Spinner
                android:id="@+id/spSituacionLaboralSolicitante"
