<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".perfilEmpresa">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F3F3"
        android:backgroundTint="#EFEDED"
        tools:context=".ui.notifications.NotificationsFragment">


        <ImageView
            android:id="@+id/imageView37"
            android:layout_width="410dp"
            android:layout_height="191dp"
            android:src="@drawable/perfilempresa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout4"
            android:layout_width="409dp"
            android:layout_height="105dp"
            android:background="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView37">

            <TextView
                android:id="@+id/textViewNombreEmpresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre empresa"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="103dp"
                tools:layout_editor_absoluteY="55dp" />

            <TextView
                android:id="@+id/textViewNombreEmpleador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Nombre empleador"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.436"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgFotoEmpleador"
                android:layout_width="82dp"
                android:layout_height="83dp"
                android:background="@drawable/imagencircular"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/fotoperfil"

                tools:layout_editor_absoluteX="6dp"
                tools:layout_editor_absoluteY="9dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="1000dp" />


        <TextView
            android:id="@+id/textViewCorreoEmpresa"
            android:layout_width="334dp"
            android:layout_height="24dp"
            android:layout_marginTop="312dp"
            android:text="Correo Empleador"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.753"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewN"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginTop="56dp"
            android:text="Número de teléfono:"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.087"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout4" />


        <TextView
            android:id="@+id/textViewNumeroEmpleador"
            android:layout_width="116dp"
            android:layout_height="24dp"
            android:layout_marginTop="40dp"
            android:text="7277 9865"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.613"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewCorreoEmpresa" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginTop="20dp"
            android:text="Dirección:"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.068"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewN" />

        <TextView
            android:id="@+id/textViewDireccionEmpleador"
            android:layout_width="170dp"
            android:layout_height="26dp"
            android:layout_marginTop="22dp"
            android:text="Direccion"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.427"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewNumeroEmpleador" />

        <TextView
            android:id="@+id/textViewSitioWeb"
            android:layout_width="376dp"
            android:layout_height="42dp"
            android:layout_marginTop="12dp"
            android:text="SitioWeb"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.657"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewDireccionEmpleador" />


        <ImageView
            android:id="@+id/btnEditarPerfil"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginTop="510dp"
            android:src="@drawable/editar_perfil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.297"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnEditarContrasenaEmpresa"
            android:layout_width="236dp"
            android:layout_height="51dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/editar_contrasena"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.89"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewSitioWeb" />

        <TextView
            android:id="@+id/btnCerrarSesionEmpleador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Cerrar Sesión"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/a1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout4" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>